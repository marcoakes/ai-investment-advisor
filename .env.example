# AI Investment Advisor - Environment Variables Template
# Copy this file to .env and add your actual API keys

# ===============================================
# DATA PROVIDER API KEYS
# ===============================================

# Alpha Vantage (Primary data provider)
# Get your free key at: https://www.alphavantage.co/support/#api-key
# Free tier: 5 requests/minute, 500 requests/day
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here

# Finnhub (Secondary data provider)
# Get your free key at: https://finnhub.io/register  
# Free tier: 60 requests/minute
FINNHUB_KEY=your_finnhub_key_here

# Yahoo Finance is used as fallback - no API key required

# ===============================================
# CONFIGURATION SETTINGS
# ===============================================

# Rate limiting (requests per second)
API_RATE_LIMIT=0.2

# Request timeout (seconds)
API_TIMEOUT=30

# Maximum retries for failed requests
MAX_RETRIES=3

# Educational mode (true/false)
EDUCATIONAL_MODE=true

# Default risk-free rate for calculations
RISK_FREE_RATE=0.02

# Default trading costs (as decimal: 0.001 = 0.1%)
TRADING_COSTS=0.001

# ===============================================
# JUPYTER NOTEBOOK SETTINGS
# ===============================================

# Port for Jupyter notebook server
JUPYTER_PORT=8888

# Token for secure access (optional)
JUPYTER_TOKEN=your_secure_token_here

# ===============================================
# LOGGING AND DEBUGGING
# ===============================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable/disable verbose output
VERBOSE_OUTPUT=true

# ===============================================
# IMPORTANT NOTES
# ===============================================
# 
# 1. NEVER commit your actual .env file to version control
# 2. Add .env to your .gitignore file
# 3. The application will work without API keys using Yahoo Finance fallback
# 4. All API keys are optional but provide enhanced functionality
# 5. Keep your API keys secure and never share them publicly
#
# ===============================================